{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Nodemon",
            "runtimeExecutable": "nodemon", // Usa o nodemon como runtime
            "program": "${workspaceFolder}/server.js", // Arquivo principal da aplicação
            "restart": true, // Reinicia automaticamente ao detectar alterações
            "console": "integratedTerminal", // Usa o terminal integrado do VS Code
            "internalConsoleOptions": "neverOpen", // Não abre o console interno
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}